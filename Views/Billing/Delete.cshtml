@model ClientSphere.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
    ViewData["CurrentPage"] = "Billing";
}

<div class="container-fluid p-0">
    <div class="mb-4">
        <h3 class="fw-bold mb-1">Delete Invoice</h3>
        <p class="text-muted mb-0">Are you sure you want to delete this invoice?</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h5 class="text-danger mb-4"><i class="bi bi-exclamation-triangle-fill me-2"></i> Warning: This action cannot be undone.</h5>
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Invoice Number</dt>
                <dd class="col-sm-9 fw-bold">@Model.InvoiceNumber</dd>
                
                <dt class="col-sm-3 text-muted">Amount</dt>
                <dd class="col-sm-9">â‚±@Model.Amount.ToString("N2")</dd>
                
                <dt class="col-sm-3 text-muted">Status</dt>
                <dd class="col-sm-9">
                    @if(Model.Status == "Paid") { <span class="badge bg-success-subtle text-success rounded-pill px-3">Paid</span> }
                    else if(Model.Status == "Pending") { <span class="badge bg-warning-subtle text-warning rounded-pill px-3">Pending</span> }
                    else if(Model.Status == "Overdue") { <span class="badge bg-danger-subtle text-danger rounded-pill px-3">Overdue</span> }
                    else { <span class="badge bg-light text-dark rounded-pill px-3">@Model.Status</span> }
                </dd>

                <dt class="col-sm-3 text-muted">Due Date</dt>
                <dd class="col-sm-9">@Model.DueDate.ToString("yyyy-MM-dd")</dd>
            </dl>

            <hr class="my-4">

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger px-4 text-white">
                        <i class="bi bi-trash me-2"></i>Delete Invoice
                    </button>
                    <a asp-action="Index" class="btn btn-light px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

