@model ClientSphere.ViewModels.BillingDashboardViewModel

@{
    ViewData["Title"] = "Billing & Invoices";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
    ViewData["CurrentPage"] = "Billing";
}

<div class="container-fluid p-0">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1">Billing & Invoice Management</h3>
            <p class="text-muted mb-0">Manage invoices, payments, and billing records</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="Create" class="btn btn-primary px-4 shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>Generate Invoice
            </a>
            <button class="btn btn-white border shadow-sm ms-2">
                <i class="bi bi-download me-2"></i>Export
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-currency-dollar h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Total Revenue</div>
                        <h3 class="fw-bold mb-0 text-success">$@Model.TotalRevenue.ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-clock-history h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Pending</div>
                        <h3 class="fw-bold mb-0 text-warning">$@Model.PendingRevenue.ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-exclamation-circle h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Overdue</div>
                        <h3 class="fw-bold mb-0 text-danger">$@Model.OverdueRevenue.ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-receipt h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Total Invoices</div>
                        <h3 class="fw-bold mb-0 text-primary">@Model.TotalInvoices</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-2">
            <div class="input-group">
                <span class="input-group-text bg-white border-0 ps-3"><i class="bi bi-search text-muted"></i></span>
                <input type="text" class="form-control border-0" placeholder="Search invoices by ID, customer, or customer ID...">
                <button class="btn btn-light border-start rounded-0 px-4" type="button"><i class="bi bi-funnel me-2"></i> All Status</button>
            </div>
        </div>
    </div>

    <!-- Invoices Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-uppercase text-muted small">
                            <th class="ps-4 border-0">Invoice ID</th>
                            <th class="border-0">Customer</th>
                            <th class="border-0">Sale ID</th>
                            <th class="border-0">Amount</th>
                            <th class="border-0">Due Date</th>
                            <th class="border-0">Status</th>
                            <th class="border-0">Payment Method</th>
                            <th class="pe-4 border-0 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.Invoices)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@invoice.InvoiceId<div class="small fw-normal text-muted">@invoice.IssuedDate.ToString("yyyy-MM-dd")</div></td>
                                <td class="fw-bold">
                                    @invoice.CustomerName
                                    <div class="small fw-normal text-muted">@invoice.CustomerId</div>
                                </td>
                                <td>@invoice.SaleId</td>
                                <td class="fw-bold">$@invoice.Amount.ToString("N0")</td>
                                <td><i class="bi bi-calendar me-1 text-muted"></i> @invoice.DueDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if(invoice.Status == "Paid")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3"><i class="bi bi-check-circle me-1"></i> Paid</span>
                                    }
                                    else if(invoice.Status == "Unpaid")
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3"><i class="bi bi-clock me-1"></i> Unpaid</span>
                                    }
                                    else if(invoice.Status == "Overdue")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3"><i class="bi bi-exclamation-circle me-1"></i> Overdue</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark border rounded-pill px-3">@invoice.Status</span>
                                    }
                                </td>
                                <td>
                                    @if(invoice.PaymentMethod == "Bank Transfer")
                                    {
                                         <span><i class="bi bi-bank me-1 text-muted"></i> Bank Transfer</span>
                                    }
                                    else if(invoice.PaymentMethod == "Credit Card")
                                    {
                                         <span><i class="bi bi-credit-card me-1 text-muted"></i> Credit Card</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@invoice.PaymentMethod</span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="#" class="btn btn-sm btn-link text-decoration-none px-0" title="View Details"><i class="bi bi-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-sm btn-link text-decoration-none px-0" title="Edit Invoice"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-sm btn-link text-decoration-none px-0 text-danger" title="Delete Invoice"><i class="bi bi-trash"></i></a>
                                        <a href="#" class="btn btn-sm btn-link text-decoration-none px-0" title="Download PDF"><i class="bi bi-download"></i></a>
                                         @if(invoice.Status == "Unpaid" || invoice.Status == "Overdue")
                                        {
                                            <form asp-action="MarkAsPaid" asp-route-id="@invoice.Id" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-success rounded-pill px-3 py-0 d-flex align-items-center" style="font-size: 0.75rem;">Mark Paid</button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
