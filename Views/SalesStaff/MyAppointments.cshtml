@model IEnumerable<ClientSphere.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h2 class="fw-bold mb-1">My Appointments</h2>
        <p class="text-muted mb-0">Manage your client meetings and schedule.</p>
    </div>
    <div class="col-md-6 text-md-end">
        <a href="#" class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#createAppointmentModal">
            <i class="bi bi-plus-lg me-2"></i>Schedule Meeting
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Title</th>
                        <th>Customer</th>
                        <th>Date & Time</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-calendar-x display-4 mb-3 d-block"></i>
                                    <h5>No appointments found</h5>
                                    <p>Schedule your first meeting with a client.</p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Title</td>
                                <td>@(item.Customer?.ContactName ?? "-")</td>
                                <td>
                                    <div>@item.StartTime.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@item.StartTime.ToString("h:mm tt") - @item.EndTime.ToString("h:mm tt")</small>
                                </td>
                                <td>@item.Location</td>
                                <td>
                                    @if (item.Status == "Scheduled")
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary">Scheduled</span>
                                    }
                                    else if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary">@item.Status</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                     <button class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Placeholder for Create Appointment -->
<div class="modal fade" id="createAppointmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Schedule New Meeting</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Scheduling functionality coming soon.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="alert('Feature coming soon!')">Save</button>
            </div>
        </div>
    </div>
</div>

