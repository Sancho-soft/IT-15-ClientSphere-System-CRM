@model ClientSphere.ViewModels.SupportDashboardViewModel

@{
    ViewData["Title"] = "Support Tickets";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
    ViewData["CurrentPage"] = "Support";
    ViewData["HideTopNavTitle"] = true;
}

@{
    var isSupportArchived = Context.Request.Query["archived"].ToString() == "1";
}

<div class="container-fluid p-0">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1">Customer Support & Ticketing</h3>
            <p class="text-muted mb-0">Manage customer inquiries and support requests</p>
        </div>
        <a asp-action="Create" class="btn btn-primary px-4">
            <i class="bi bi-plus-lg me-2"></i>Create New Ticket
        </a>
    </div>

    <!-- Status Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(!isSupportArchived ? "active fw-bold" : "")" href="?archived=0">
                <i class="bi bi-chat-square-text me-1"></i> Active Tickets
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(isSupportArchived ? "active fw-bold" : "")" href="?archived=1">
                <i class="bi bi-archive me-1"></i> Archived
            </a>
        </li>
    </ul>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-chat-square-text h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Total Tickets</div>
                        <h3 class="fw-bold mb-0 text-primary">@Model.TotalTickets</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-clock h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">In Progress</div>
                        <h3 class="fw-bold mb-0 text-warning">@Model.InProgressTickets</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-check-circle h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Resolved</div>
                        <h3 class="fw-bold mb-0 text-success">@Model.ResolvedTickets</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-3 me-3">
                        <i class="bi bi-exclamation-circle h4 mb-0"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Critical</div>
                        <h3 class="fw-bold mb-0 text-danger">@Model.CriticalTickets</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-2">
            <div class="input-group">
                <span class="input-group-text bg-white border-0 ps-3"><i class="bi bi-search text-muted"></i></span>
                <input type="text" class="form-control border-0" placeholder="Search tickets by ID, customer, or subject...">
                <button class="btn btn-light border-start rounded-0 px-4" type="button"><i class="bi bi-funnel me-2"></i> All Status</button>
                <button class="btn btn-light border-start rounded-0 px-4" type="button">All Priority</button>
            </div>
        </div>
    </div>

    <!-- Tickets List -->
    @foreach (var ticket in Model.Tickets)
    {
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h5 class="fw-bold mb-1">@ticket.Subject 
                            @if(ticket.Status == "In Progress") { <span class="badge bg-warning bg-opacity-10 text-warning ms-2 small fw-normal"><i class="bi bi-clock me-1"></i> In Progress</span> }
                            else if(ticket.Status == "Resolved") { <span class="badge bg-success bg-opacity-10 text-success ms-2 small fw-normal"><i class="bi bi-check-circle me-1"></i> Resolved</span> }
                            else if(ticket.Status == "Open") { <span class="badge bg-primary bg-opacity-10 text-primary ms-2 small fw-normal"><i class="bi bi-envelope-open me-1"></i> Open</span> }
                            
                            @if(ticket.Priority == "High") { <span class="badge bg-danger bg-opacity-10 text-danger ms-1 small fw-normal">High</span> }
                            else if(ticket.Priority == "Critical") { <span class="badge bg-danger text-white ms-1 small fw-normal">Critical</span> }
                            else if(ticket.Priority == "Medium") { <span class="badge bg-info bg-opacity-10 text-info ms-1 small fw-normal">Medium</span> }
                            else if(ticket.Priority == "Low") { <span class="badge bg-success bg-opacity-10 text-success ms-1 small fw-normal">Low</span> }
                        </h5>
                        <div class="text-muted small">@ticket.Description</div>
                    </div>
                    <div class="fw-bold text-muted small">@ticket.TicketId</div>
                </div>

                <div class="row small text-muted">
                    <div class="col-md-3">
                        <div class="fw-normal mb-1">Customer</div>
                        <div class="text-dark fw-bold">@ticket.CustomerName</div>
                        <div class="small">@ticket.CustomerId</div>
                    </div>
                    <div class="col-md-3">
                         <div class="fw-normal mb-1">Assigned To</div>
                        <div class="text-dark fw-bold"><i class="bi bi-person me-1"></i> @ticket.AssignedTo</div>
                    </div>
                    <div class="col-md-3">
                         <div class="fw-normal mb-1">Created Date</div>
                        <div class="text-dark"><i class="bi bi-calendar me-1"></i> @ticket.CreatedAt.ToString("yyyy-MM-dd")</div>
                    </div>
                    <div class="col-md-3">
                         <div class="fw-normal mb-1">Last Updated</div>
                        <div class="text-dark"><i class="bi bi-clock-history me-1"></i> @ticket.LastUpdated.ToString("yyyy-MM-dd HH:mm tt")</div>
                    </div>
                </div>
                
                <hr class="my-3 opacity-25"> 

                <div class="d-flex gap-3 align-items-center flex-wrap">
                    <a asp-action="Edit" asp-route-id="@ticket.Id" class="text-decoration-none small fw-bold"><i class="bi bi-pencil-square me-1"></i> Edit Ticket</a>
                    <a asp-action="Delete" asp-route-id="@ticket.Id" class="text-decoration-none small fw-bold text-danger"><i class="bi bi-trash me-1"></i> Delete Ticket</a>
                    <a href="#" class="text-decoration-none small fw-bold text-secondary" data-bs-toggle="modal" data-bs-target="#commentModal-@ticket.Id">
                        <i class="bi bi-chat-left-text me-1"></i> Add Comment
                    </a>
                    @if (ticket.Status != "Closed")
                    {
                        <form asp-action="CloseTicket" asp-route-id="@ticket.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link p-0 text-decoration-none small fw-bold text-success border-0">
                                <i class="bi bi-check2-circle me-1"></i> Mark as Closed
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="small text-muted"><i class="bi bi-check2-circle me-1"></i> Closed</span>
                    }
                </div>

                <!-- Comment Modal -->
                <div class="modal fade" id="commentModal-@ticket.Id" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="AddComment" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ticketId" value="@ticket.Id" />
                                <div class="modal-header">
                                    <h6 class="modal-title fw-bold">Add Comment — @ticket.TicketId</h6>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <textarea name="comment" class="form-control" rows="4" placeholder="Enter your comment..." required></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary btn-sm">Save Comment</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
