@model ClientSphere.Models.ApplicationUser
@{
    ViewData["Title"] = "My Profile";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-person-circle me-2"></i>My Profile</h5>
            </div>
            <div class="card-body p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="MyProfile" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">First Name</label>
                            <input type="text" name="firstName" value="@Model.FirstName" class="form-control" placeholder="Enter first name" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Last Name</label>
                            <input type="text" name="lastName" value="@Model.LastName" class="form-control" placeholder="Enter last name" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Email Address</label>
                        <input type="email" name="email" value="@Model.Email" class="form-control" placeholder="user@example.com" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input type="tel" name="phoneNumber" value="@Model.PhoneNumber" class="form-control" placeholder="+1 (555) 123-4567" />
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Dashboard" class="btn btn-light">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

