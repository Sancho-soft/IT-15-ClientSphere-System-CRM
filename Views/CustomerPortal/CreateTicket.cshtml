@model ClientSphere.Models.SupportTicket

@{
    ViewData["Title"] = "Create New Ticket";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["CurrentPage"] = "Support";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h4 class="fw-bold mb-0">Create New Support Ticket</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateTicket">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label fw-bold"></label>
                        <input asp-for="Subject" class="form-control" placeholder="Briefly describe the issue..." />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>



                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="6" placeholder="Please provide detailed information about your request..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Dashboard" class="btn btn-light me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Submit Ticket</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

