@model IEnumerable<ClientSphere.Models.Order>
@{
    ViewData["Title"] = "My Orders";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom py-3">
        <h5 class="mb-0 fw-bold"><i class="bi bi-cart-check me-2"></i>My Orders</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 ps-4">Order ID</th>
                            <th class="border-0">Date</th>
                            <th class="border-0">Status</th>
                            <th class="border-0">Items</th>
                            <th class="border-0 text-end pe-4">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">ORD-@order.Id.ToString("D5")</td>
                                <td class="text-muted">@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @switch (order.Status.ToString())
                                    {
                                        case "Completed":
                                            <span class="badge bg-success rounded-pill px-3">Completed</span>
                                            break;
                                        case "Processing":
                                            <span class="badge bg-primary rounded-pill px-3">Processing</span>
                                            break;
                                        case "Pending":
                                            <span class="badge bg-warning rounded-pill px-3">Pending</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary rounded-pill px-3">@order.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@order.OrderItems.Count items</td>
                                <td class="text-end fw-bold pe-4">â‚±@order.TotalAmount.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-cart-x text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">No orders found</p>
            </div>
        }
    </div>
</div>

