@model ClientSphere.Models.Order

@{
    ViewData["Title"] = "Edit Order";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
    ViewData["CurrentPage"] = "Sales";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Edit Order</h1>
            <p class="text-muted small">Update order status and details.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CustomerId" />

                <div class="row mb-3">
                     <div class="col-md-6">
                        <label class="form-label fw-bold">Order ID</label>
                        <input type="text" class="form-control" value="ORD-@Model.Id.ToString("D5")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Customer</label>
                         <input type="text" class="form-control" value="@Model.Customer?.CompanyName" readonly />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="OrderDate" class="form-label fw-bold"></label>
                        <input asp-for="OrderDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="OrderDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-bold"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="Pending">Pending</option>
                            <option value="Processing">Processing</option>
                            <option value="Shipped">Shipped</option>
                            <option value="Delivered">Delivered</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>
                </div>

                 <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Modifying order items is not currently supported in this view. Please cancel and recreate the order if items need to change.
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-2"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

