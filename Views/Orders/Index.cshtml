@model IEnumerable<ClientSphere.Models.Order>

@{
    ViewData["Title"] = "Sales Orders";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
    ViewData["CurrentPage"] = "Sales";
}


<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sales Orders</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-cart-plus me-2"></i>New Order
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Orders</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="ordersTable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.Id</td>
                                <td>@item.OrderDate.ToString("g")</td>
                                <td>
                                    @if(item.Customer != null)
                                    {
                                        <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.CustomerId">@item.Customer.CompanyName</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>
                                <td>@item.TotalAmount.ToString("C")</td>
                                <td>
                                    @if(item.Status == ClientSphere.Models.OrderStatus.Completed)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if(item.Status == ClientSphere.Models.OrderStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if(item.Status == ClientSphere.Models.OrderStatus.Cancelled)
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="View Invoice">
                                        <i class="bi bi-receipt"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

