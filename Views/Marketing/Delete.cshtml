@model ClientSphere.Models.Campaign

@{
    ViewData["Title"] = "Delete Campaign";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
    ViewData["CurrentPage"] = "Marketing";
}

<div class="container-fluid p-0">
    <div class="mb-4">
        <h3 class="fw-bold mb-1">Delete Campaign</h3>
        <p class="text-muted mb-0">Are you sure you want to delete this campaign?</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h5 class="text-danger mb-4"><i class="bi bi-exclamation-triangle-fill me-2"></i> Warning: This action cannot be undone.</h5>
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Campaign Name</dt>
                <dd class="col-sm-9 fw-bold">@Model.Name</dd>
                
                <dt class="col-sm-3 text-muted">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>
                
                <dt class="col-sm-3 text-muted">Status</dt>
                <dd class="col-sm-9">
                    @if(Model.Status == "Active") { <span class="badge bg-success-subtle text-success rounded-pill px-3">Active</span> }
                    else if(Model.Status == "Completed") { <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3">Completed</span> }
                    else { <span class="badge bg-light text-dark rounded-pill px-3">@Model.Status</span> }
                </dd>

                <dt class="col-sm-3 text-muted">Budget</dt>
                <dd class="col-sm-9">$@Model.Budget.ToString("N0")</dd>
            </dl>

            <hr class="my-4">

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger px-4 text-white">
                        <i class="bi bi-trash me-2"></i>Delete Campaign
                    </button>
                    <a asp-action="Index" class="btn btn-light px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
