@model ClientSphere.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    ViewData["HideTopNavTitle"] = true;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="card-title mb-0">Delete Product</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-text">Are you sure you want to delete this product?</h5>
                    <p class="text-muted">This action cannot be undone.</p>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.StockQuantity)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

