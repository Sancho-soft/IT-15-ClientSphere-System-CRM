@functions {
    string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "??";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();
    }

    string GetTimeAgo(DateTime timestamp)
    {
        var timeAgo = DateTime.UtcNow - timestamp;
        if (timeAgo.TotalMinutes < 1) return "Just now";
        if (timeAgo.TotalMinutes < 60) return $"{(int)timeAgo.TotalMinutes}m ago";
        if (timeAgo.TotalHours < 24) return $"{(int)timeAgo.TotalHours}h ago";
        if (timeAgo.TotalDays < 7) return $"{(int)timeAgo.TotalDays}d ago";
        return timestamp.ToString("MMM dd");
    }

    string GetActivityColor(string action)
    {
        return "bg-light text-secondary"; 
    }
    
    // Helper to return badge color implementation
     string GetBadgeColor(string action)
    {
        if (action.Contains("Created") || action.Contains("Added")) return "bg-success-subtle text-success";
        if (action.Contains("Updated") || action.Contains("Modified")) return "bg-primary-subtle text-primary";
        if (action.Contains("Deleted") || action.Contains("Removed")) return "bg-danger-subtle text-danger";
        return "bg-secondary-subtle text-secondary";
    }

    string GetActivityCategory(string action)
    {
        if (action.Contains("Customer")) return "Customer";
        if (action.Contains("Order") || action.Contains("Sales")) return "Sales";
        if (action.Contains("Ticket") || action.Contains("Support")) return "Support";
        if (action.Contains("Campaign") || action.Contains("Marketing")) return "Marketing";
        if (action.Contains("Invoice") || action.Contains("Billing")) return "Billing";
        if (action.Contains("Login") || action.Contains("Logout")) return "System";
        return "General";
    }
}

