                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 ps-4">User</th>
                            <th class="border-0">Action</th>
                            <th class="border-0">Module</th>
                            <th class="border-0 text-end pe-4">Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentActivities.Any())
                        {
                            foreach (var activity in Model.RecentActivities)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle-sm me-2 @GetActivityColor(activity.Action)">@GetInitials(activity.UserName)</div>
                                            <span class="fw-bold">@activity.UserName</span>
                                        </div>
                                    </td>
                                    <td>@activity.Action</td>
                                    <td><span class="badge @GetBadgeColor(activity.Action)">@GetActivityCategory(activity.Action)</span></td>
                                    <td class="text-end pe-4 text-muted small">@GetTimeAgo(activity.Timestamp)</td>
