@{
    ViewData["Title"] = "Reset User Password";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div><i class="bi bi-exclamation-triangle me-2"></i>@error.ErrorMessage</div>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom py-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-2 me-3">
                        <i class="bi bi-key h5 mb-0"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Reset User Password</h5>
                        <small class="text-muted">Super Admin only</small>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-info border-0 bg-info bg-opacity-10 mb-4">
                    <i class="bi bi-info-circle me-2"></i>
                    Only the <strong>Super Admin</strong> can reset passwords for other users. The user will need to log in with their new password.
                </div>

                <form asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-4">
                        <label for="userId" class="form-label fw-bold">Select User</label>
                        <select id="userId" name="userId" class="form-select" required>
                            <option value="">-- Select a User --</option>
                            @if (ViewBag.UserList != null)
                            {
                                foreach (var (id, displayName) in (IEnumerable<(string, string)>)ViewBag.UserList)
                                {
                                    if ((string)ViewBag.SelectedUserId == id)
                                    {
                                        <option value="@id" selected>@displayName</option>
                                    }
                                    else
                                    {
                                        <option value="@id">@displayName</option>
                                    }
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label fw-bold">New Password</label>
                        <div class="input-group">
                            <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="Enter new password" required />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('newPassword', this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="confirmPassword" class="form-label fw-bold">Confirm New Password</label>
                        <div class="input-group">
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm new password" required />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPassword', this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card bg-light border-0 mb-4 p-3">
                        <div class="small text-muted fw-bold mb-2">Password Requirements:</div>
                        <div class="row">
                            <div class="col-6 small"><i class="bi bi-check-circle text-success me-1"></i> At least 8 characters</div>
                            <div class="col-6 small"><i class="bi bi-check-circle text-success me-1"></i> 1 uppercase letter</div>
                            <div class="col-6 small"><i class="bi bi-check-circle text-success me-1"></i> 1 number</div>
                            <div class="col-6 small"><i class="bi bi-check-circle text-success me-1"></i> 1 special character</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="UserManagement" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-key me-2"></i>Reset Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(id, btn) {
            const input = document.getElementById(id);
            const icon = btn.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        }
    </script>
}

