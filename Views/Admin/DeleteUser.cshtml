@model ClientSphere.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete User";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-danger text-white border-bottom py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle me-2"></i>Delete User</h5>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning border-0">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this user? This action cannot be undone.
                </div>

                <div class="mb-4">
                    <h6 class="text-muted mb-3">User Details:</h6>
                    <div class="row mb-2">
                        <div class="col-4 fw-bold">Name:</div>
                        <div class="col-8">@Model.FirstName @Model.LastName</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-bold">Email:</div>
                        <div class="col-8">@Model.Email</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-4 fw-bold">Role:</div>
                        <div class="col-8"><span class="badge bg-primary">@ViewBag.UserRole</span></div>
                    </div>
                </div>

                <form asp-action="DeleteUser" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="UserManagement" class="btn btn-light">Cancel</a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

