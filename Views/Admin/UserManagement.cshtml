@model ClientSphere.ViewModels.UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Summary Cards Section -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card border-0 shadow-sm p-3">
            <div class="d-flex align-items-center">
                 <div class="icon-shape bg-secondary-subtle text-secondary rounded-3 p-2 me-2">
                    <i class="bi bi-people h5 mb-0"></i>
                </div>
                <div>
                     <div class="text-muted small">Total Users</div>
                     <h3 class="fw-bold mb-0">@Model.TotalUsers</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm p-3">
            <div class="d-flex align-items-center">
                 <div class="icon-shape bg-primary-subtle text-primary rounded-3 p-2 me-2">
                    <i class="bi bi-shield-lock h5 mb-0"></i>
                </div>
                <div>
                    <div class="text-muted small">Admins</div>
                    <h3 class="fw-bold mb-0 text-primary">@Model.AdminCount</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm p-3">
            <div class="d-flex align-items-center">
                 <div class="icon-shape bg-info-subtle text-info rounded-3 p-2 me-2">
                    <i class="bi bi-graph-up-arrow h5 mb-0"></i>
                </div>
                <div>
                    <div class="text-muted small">Sales</div>
                    <h3 class="fw-bold mb-0 text-info">@Model.SalesTeamCount</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-0 shadow-sm p-3">
             <div class="d-flex align-items-center">
                 <div class="icon-shape bg-success-subtle text-success rounded-3 p-2 me-2">
                    <i class="bi bi-headset h5 mb-0"></i>
                </div>
                <div>
                    <div class="text-muted small">Support</div>
                    <h3 class="fw-bold mb-0 text-success">@Model.SupportTeamCount</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
         <div class="card border-0 shadow-sm p-3">
            <div class="d-flex align-items-center">
                 <div class="icon-shape bg-success-subtle text-success rounded-3 p-2 me-2">
                    <i class="bi bi-check-circle h5 mb-0"></i>
                </div>
                <div>
                    <div class="text-muted small">Active</div>
                    <h3 class="fw-bold mb-0 text-success">@Model.ActiveUsers</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                <input type="text" class="form-control border-start-0 ps-0" placeholder="Search users by name or email..." id="userSearch">
            </div>
            <div>
                 <button class="btn btn-outline-secondary me-2"><i class="bi bi-funnel"></i> All Roles</button>
                 <a asp-action="CreateUser" class="btn btn-primary"><i class="bi bi-plus-lg me-2"></i>Add New User</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="usersTable">
                <thead class="bg-white">
                    <tr>
                        <th class="border-0 text-dark small fw-bold">USER</th>
                        <th class="border-0 text-dark small fw-bold">ROLE</th>
                        <th class="border-0 text-dark small fw-bold">STATUS</th>
                        <th class="border-0 text-dark small fw-bold">LAST ACTIVE</th>
                        <th class="border-0 text-dark small fw-bold text-end">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 bg-secondary text-white fw-bold" style="width: 32px; height: 32px; font-size: 0.8rem;">@user.Initials</div>
                                    <div>
                                        <div class="fw-bold text-dark">@user.FullName</div>
                                        <div class="text-muted small" style="font-size: 0.75rem;">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3 py-2 fw-normal" style="font-size: 0.8rem;">@user.Role</span></td>
                            <td><span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2 fw-normal" style="font-size: 0.8rem;">@user.Status</span></td>
                            <td class="text-muted small" style="font-size: 0.85rem;">@user.LastActiveDisplay</td>
                            <td class="text-end">
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-link text-primary text-decoration-none px-2" title="Edit User"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="ResetPassword" asp-route-userId="@user.Id" class="btn btn-sm btn-link text-warning text-decoration-none px-2" title="Reset Password"><i class="bi bi-key"></i></a>
                                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-link text-danger text-decoration-none px-2" title="Delete User"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Summary Cards Section -->




<script>
    // Simple client-side search
    document.getElementById('userSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#usersTable tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
</script>

