@{
    ViewData["Title"] = "System Settings";
    ViewData["HideTopNavTitle"] = true;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form>
             <!-- General System Settings -->
            <div class="card border-0 shadow-sm mb-4">
                 <div class="card-body">
                    <div class="mb-4">
                        <label class="form-label fw-bold small">Session Timeout</label>
                        <div class="form-text text-muted mb-2 mt-0">Auto logout after inactivity</div>
                        <select class="form-select">
                            <option selected>15 minutes</option>
                            <option>30 minutes</option>
                            <option>1 hour</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Minimum Password Length</label>
                        <input type="number" class="form-control" value="8">
                    </div>
                 </div>
            </div>

            <!-- Email Settings -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-envelope me-2 text-purple" style="color: #6f42c1;"></i> Email Settings</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold small">SMTP Server</label>
                        <input type="text" class="form-control" value="smtp.clientsphere.com">
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">SMTP Port</label>
                            <input type="text" class="form-control" value="587">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Encryption</label>
                             <select class="form-select">
                                <option selected>TLS</option>
                                <option>SSL</option>
                                <option>None</option>
                            </select>
                        </div>
                    </div>
                     <div class="mb-3">
                        <label class="form-label fw-bold small">From Email Address</label>
                        <input type="email" class="form-control" value="noreply@clientsphere.com">
                    </div>
                    <button type="button" class="btn btn-outline-secondary btn-sm"><i class="bi bi-send me-1"></i> Send Test Email</button>
                </div>
            </div>

            <!-- Notification Settings -->
             <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-bell me-2 text-warning"></i> Notification Settings</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <div class="fw-bold">New User Registrations</div>
                            <div class="text-muted small">Notify admins of new user signups</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" checked style="width: 3em; height: 1.5em;">
                        </div>
                    </div>
                     <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <div class="fw-bold">System Updates</div>
                            <div class="text-muted small">Notify users of system maintenance</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" checked style="width: 3em; height: 1.5em;">
                        </div>
                    </div>
                     <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <div class="fw-bold">Critical Alerts</div>
                            <div class="text-muted small">Send alerts for system errors</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" checked style="width: 3em; height: 1.5em;">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Database & Backup -->
             <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-database me-2 text-primary"></i> Database & Backup</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <div class="fw-bold">Automatic Backups</div>
                            <div class="text-muted small">Daily automated database backups</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" checked style="width: 3em; height: 1.5em;">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Backup Frequency</label>
                         <select class="form-select">
                            <option selected>Every 6 hours</option>
                            <option>Daily</option>
                            <option>Weekly</option>
                        </select>
                    </div>
                     <div class="mb-4">
                        <label class="form-label fw-bold small">Retention Period</label>
                         <select class="form-select">
                            <option selected>7 days</option>
                            <option>30 days</option>
                            <option>90 days</option>
                        </select>
                    </div>
                    <div class="d-flex gap-2">
                         <button type="button" class="btn btn-primary"><i class="bi bi-arrow-repeat me-1"></i> Backup Now</button>
                         <button type="button" class="btn btn-outline-secondary"><i class="bi bi-hdd-stack me-1"></i> View Backups</button>
                    </div>
                </div>
            </div>

            <!-- API & Integrations -->
             <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-lock me-2 text-danger"></i> API & Integrations</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="form-label fw-bold small">API Key</label>
                        <div class="input-group">
                            <input type="text" class="form-control" value="........................................" readonly>
                            <button class="btn btn-outline-secondary" type="button">Regenerate</button>
                        </div>
                    </div>
                     <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <div class="fw-bold">API Access</div>
                            <div class="text-muted small">Enable external API access</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" checked style="width: 3em; height: 1.5em;">
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label fw-bold small">Rate Limit (requests per minute)</label>
                        <input type="number" class="form-control" value="100">
                    </div>
                </div>
            </div>
            <!-- Save Actions -->
            <div class="d-flex justify-content-end mb-4">
                <button type="button" class="btn btn-outline-secondary me-2">Cancel</button>
                <button type="button" class="btn btn-primary" disabled title="Settings management coming soon">Save Changes</button>
            </div>
        </form>
    </div>
</div>

