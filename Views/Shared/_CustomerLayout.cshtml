<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClientSphere Customer Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body { background-color: #e9ecef; }
        .customer-sidebar {
            width: 260px;
            height: 100vh;
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        .main-content { margin-left: 260px; padding: 2rem; }
        .nav-link { color: #555; font-weight: 500; padding: 0.8rem 1.5rem; display: flex; align-items: center; }
        .nav-link:hover, .nav-link.active { color: #0d6efd; background-color: #f0f7ff; border-right: 3px solid #0d6efd; }
        .nav-link i { font-size: 1.2rem; margin-right: 0.8rem; }
        
        @@media (max-width: 768px) {
            .customer-sidebar { left: -260px; transition: 0.3s; }
            .customer-sidebar.active { left: 0; }
            .main-content { margin-left: 0; }
            .sidebar-overlay { display: none; position: fixed; width: 100vw; height: 100vh; background: rgba(0,0,0,0.5); z-index: 999; top: 0; left: 0; }
            .sidebar-overlay.active { display: block; }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div id="customerSidebar" class="customer-sidebar">
        <div class="flex-grow-1 overflow-auto">
            <div class="p-4">
                <a href="/" class="d-block mb-2 text-center">
                    <img src="~/images/logocustomer.png" alt="ClientSphere" style="max-height: 150px; width: auto; max-width: 100%;" class="img-fluid">
                </a>
                <div class="small text-uppercase text-muted fw-bold mt-3 mb-2" style="letter-spacing: 1px;">Customer Portal</div>
            </div>

            <nav class="nav flex-column mb-3">
                <a class="nav-link @(ViewData["CurrentPage"] as string == "Dashboard" ? "active" : "")" asp-controller="CustomerPortal" asp-action="Dashboard">
                    <i class="bi bi-grid-fill"></i> Overview
                </a>
                <a class="nav-link" asp-controller="CustomerPortal" asp-action="MyOrders">
                    <i class="bi bi-box-seam"></i> My Orders
                </a>
                <a class="nav-link" asp-controller="CustomerPortal" asp-action="MyInvoices">
                    <i class="bi bi-receipt"></i> Invoices
                </a>
                <a class="nav-link" asp-controller="CustomerPortal" asp-action="MyTickets">
                    <i class="bi bi-ticket-perforated"></i> Support Tickets
                </a>
                <a class="nav-link" asp-controller="CustomerPortal" asp-action="MyProfile">
                    <i class="bi bi-person-circle"></i> Profile Settings
                </a>
            </nav>
        </div>

        <div class="p-3 border-top bg-light">
             <div class="d-flex align-items-center mb-3 px-2">
                @{
                    var userManager = Context.RequestServices.GetService(typeof(Microsoft.AspNetCore.Identity.UserManager<ClientSphere.Models.ApplicationUser>)) as Microsoft.AspNetCore.Identity.UserManager<ClientSphere.Models.ApplicationUser>;
                    var appUser = userManager != null ? await userManager.GetUserAsync(User) : null;
                    var fullName = appUser != null && !string.IsNullOrWhiteSpace(appUser.FirstName) ? $"{appUser.FirstName} {appUser.LastName}" : User.Identity?.Name;
                    var initials = appUser != null && !string.IsNullOrWhiteSpace(appUser.FirstName) 
                        ? $"{appUser.FirstName.Substring(0, 1).ToUpper()}{(string.IsNullOrWhiteSpace(appUser.LastName) ? "" : appUser.LastName.Substring(0, 1).ToUpper())}" 
                        : (User.Identity?.Name?.Substring(0, 1).ToUpper() ?? "C");
                }
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                    @initials
                </div>
                <div class="lh-1 overflow-hidden">
                    <div class="fw-bold text-truncate">@fullName</div>
                    <div class="text-muted small text-truncate" style="font-size: 0.75rem;">Premium Member</div>
                </div>
            </div>
            <form class="mb-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-danger w-100 btn-sm">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div id="sidebarOverlay" class="sidebar-overlay"></div>

    <!-- Main Content -->
    <div class="main-content">
        <header class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
            <div class="d-flex align-items-center">
                 <button id="sidebarToggle" class="btn btn-outline-secondary d-md-none me-3">
                    <i class="bi bi-list"></i>
                </button>
                
            </div>
            <div>
                <a asp-controller="CustomerPortal" asp-action="CreateTicket" class="btn btn-primary rounded-pill">
                    <i class="bi bi-plus-lg me-1"></i> New Ticket
                </a>
            </div>
        </header>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarToggle, #sidebarOverlay').on('click', function () {
                $('#customerSidebar').toggleClass('active');
                $('#sidebarOverlay').toggleClass('active');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
